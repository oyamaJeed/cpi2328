# TARGET NAME
TARGET := display

# SOURCE FILES
SRC := $(TARGET).c

# OBJECT FILES
OBJ := $(TARGET).o

# SHARED OBJECT FILES
SO  := libdlink.so

# COMPILER OPTION
CFLAGS := -g -Wall

LFLAGS := -lm -pthread

SHARED := -shared

CC := gcc $(CFLAGS) $(LFLAGS)


all : $(TARGET)

# LINK OBJECTS
$(TARGET): $(OBJ) 
	$(CC) $(SHARED) $(SRC) -fPIC -o $(SO)

# COMPILE SOURCES
.c.o:
	$(CC) -c $^

# CLEAN FILES (PHONY TARGET)
clean:
	rm -f $(TARGET) $(OBJ) $(SO)

